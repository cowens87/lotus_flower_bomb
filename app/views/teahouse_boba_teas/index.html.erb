<h1>List of Boba Teas</h1>

<%= link_to 'Add Boba Tea', new_teahouse_boba_teas_path %>

<p>Number of Boba Teas:      <%= @teas.count %></p>

<% @teas.each do |tea| %>
  <section id="tea-<%=tea.id%>">
    <h3>             <%= tea.name %></h3>
    <li>Price:      $<%= tea.price %></li>
    <li>Base:        <%= tea.base %></li>
    <li>Caffeinated: <%= tea.caffeinated %></li>
    <li>Description: <%= tea.description %></li>
  </section>
<% end %>