<h2> Add a Boba Tea </h2>

<%= form_tag teahouse_boba_teas_path(@tea.id) do %>
  <%= label_tag :name, 'Name:' %>
  <%= text_field_tag :name,  '', :required => true%><br>
  <%= label_tag :price, 'Price: $' %>
  <%= text_field_tag :price, '', :required => true%><br>
  <%= label_tag :base, 'Base:' %>
  <%= text_field_tag :base, '', :required => true%><br>
  <%= label_tag :description, 'Description:' %>
  <%= text_field_tag :description, '', :required => true%><br>
  <%= label_tag :caffeinated, 'Caffeinated?' %>
  <%= hidden_field_tag :caffeinated, false %>
  <%= check_box_tag :caffeinated, true %><br>
  <%= submit_tag 'Submit' %>
<% end %>